<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :title %>
	<%= f.input :content, :input_html => { :cols => 50, :rows => 3 } %>
    </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

